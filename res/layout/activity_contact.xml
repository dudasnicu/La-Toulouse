<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/untitled5"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.Nidosoft.restaurant.ContactActivity" >

    <Button
        android:id="@+id/twticon_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/twitter" />

    <Button
        android:id="@+id/fbicon_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/facebook" />

    <TextView
        android:id="@+id/email_adress_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_text"
        android:layout_alignLeft="@+id/ymailicon_button"
        android:layout_alignParentRight="true"
        android:background="@drawable/fcj_12" />

    <TextView
        android:id="@+id/phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/fcj_04" />

    <Button
        android:id="@+id/ymailicon_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/twticon_button"
        android:layout_alignBottom="@+id/twticon_button"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@+id/twticon_button" 
        android:background="@drawable/yahoo_mail"
        />

    <Button
        android:id="@+id/gmailicon_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="58dp"
        android:layout_height="55dp"
        android:layout_alignBaseline="@+id/fbicon_button"
        android:layout_alignBottom="@+id/fbicon_button"
        android:layout_marginRight="32dp"
        android:layout_toLeftOf="@+id/fbicon_button" 
        android:background="@drawable/gmail"/>

    <TextView
        android:id="@+id/phone_number_decimal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email_text"
        android:layout_alignLeft="@+id/email_adress_text"
        android:layout_alignRight="@+id/email_adress_text"
        android:background="@drawable/fcj_06" />

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/phone_number_text"
        android:layout_below="@+id/phone_number_text"
        android:layout_marginTop="17dp"
        android:background="@drawable/fcj_10" />

</RelativeLayout>